<h1>Create an Account</h1>
<h2>Start your digital Bullet Journal today!</h2>

<% if flash[:success] %>
  <div class="success-message">
    <%= flash[:success] %>
  </div>
<% elsif flash[:error] %>
  <div class="error-message">
    <% if flash[:error].size == 1 %>
      <%= flash[:error].join %>
    <% else %>
      The following errors are preventing you from creating your account:
      <ul>
        <% flash[:error].flatten.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
<% end %>

<form class="submit" action="/signup" method="post">
  <table>
    <tr>
      <td class="col-1">
        <label>Email:</label>
      </td>
      <td class="textbox">
        <input required type="email" name="email" value="">
      </td>
    </tr>

    <tr>
      <td class="col-1">
        <label>First Name:</label>
      </td>
      <td class="textbox">
        <input required type="text" name="first_name" value="">
      </td>
    </tr>

    <tr>
      <td class="col-1">
        <label>Last Name:</label>
      </td>
      <td class="textbox">
        <input required type="text" name="last_name" value="">
      </td>
    </tr>

    <tr>
      <td class="col-1">
        <label>Password: </label>
      </td>
      <td class="textbox">
        <input required type="password" name="password" value="">
      </td>
    </tr>

    <tr>
      <td class="col-1">
        <label>Confirm Password: </label>
      </td>
      <td class="textbox">
        <input required type="password" name="password_confirmation" value="">
      </td>
    </tr>

  </table>

  <input type="submit" value="Create Account">
</form>

<p>
  <a href="/login">Already have an account? Log in here.</a>
</p>
