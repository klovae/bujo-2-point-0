<h1 class="day-title">Tasks for <%= @day.date.strftime("%a, %B %-d, %Y") %></h1>



<% @day.tasks.each do |task| %>
<div class="task">
  <a href="/day/<%= @day.id %>/tasks/<%= task.id %>"><%= task.content %></a>
</div>
<% end %>

<a href="/days/<%= @day.id %>/tasks/new">
  <div class="button">
    Add a task
  </div>
</a>
